<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"
		controllerName="sap.checkmarx.selfservice.taktstrasse.darstellungen.details" xmlns:html="http://www.w3.org/1999/xhtml">
	<Page
		title="Details"
		showHeader="true"
		enableScrolling="false"
		showNavButton="true"
		navButtonPress="onNavBack">
			<customHeader>
				<Bar class="header" >
					<contentLeft>
						<Button icon="sap-icon://nav-back" press="onNavBack" class="sapMBarChild sapBtn sapBtnBase navBack"/>  						
					</contentLeft>
					<contentMiddle>
						<Text text = "Details" class="headertitle"></Text>
					</contentMiddle>
				</Bar>	 
	    	</customHeader>
		<Table
                    headerText="Current Details"
                    items="{/ProductCollection}">
                    <columns>
                        <Column>
                            <header>
                                <Label text="Info1" />
                            </header>
                        </Column>
                        <Column>
                            <header>
                                <Label text="Info2" />
                            </header>
                        </Column>
                        <Column>
                            <header>
                                <Label text="Info3" />
                            </header>
                        </Column>
                    </columns>
                    <ColumnListItem type="Active">
                        <cells>
                            <ObjectIdentifier title="{title}" />
                            <ObjectIdentifier title="{number}" />
                            <ObjectIdentifier title="{info}" />
                        </cells>
                    </ColumnListItem>
                </Table>
	</Page>
</core:View>