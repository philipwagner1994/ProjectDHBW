<core:View  xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns:acc="sap.checkmarx.selfservice.control"
		controllerName="sap.checkmarx.selfservice.taktstrasse.darstellungen.drilling" xmlns:html="http://www.w3.org/1999/xhtml">
	<Page
		title="Drilling"
		showHeader="true"
		enableScrolling="false"
		showNavButton="true"
		navButtonPress="onNavBack">
			<customHeader>
				<Bar class="header" >
					<contentLeft>
						<Button icon="sap-icon://nav-back" press="onNavBack" class="sapMBarChild sapBtn sapBtnBase navBack"/>  						
					</contentLeft>
					<contentMiddle>
						<Text text = "Drilling" class="headertitle"></Text>
					</contentMiddle>
				</Bar>	 
	    	</customHeader>		
		<IconTabBar
		id="idIconTabBarNoIcons"
		expanded="{device>/isNoPhone}"
		class="sapUiResponsiveContentPadding">
		<items>
			<IconTabFilter
				text="Heat indicator">
				<acc:LineChartHeat width="400" height="200" responsive="true" chartType="Line" data="{/lineData}"/>
			</IconTabFilter>
			<IconTabFilter
				text="Speed indicator">
				<acc:LineChartSpeed width="400" height="200" responsive="true" chartType="Line" data="{/lineData}"/>
			</IconTabFilter>
		</items>
	</IconTabBar>
	</Page>
</core:View>