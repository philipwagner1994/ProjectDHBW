<core:View  xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns:acc="sap.checkmarx.selfservice.control" xmlns:l="sap.ui.layout" xmlns:u="sap.ui.unified" 
		controllerName="sap.checkmarx.selfservice.tacktstrasse.darstellungen.milling" xmlns:html="http://www.w3.org/1999/xhtml">
	<Page
		title="Milling"
		showHeader="true"
		enableScrolling="false"
		showNavButton="true"
		navButtonPress="onNavBack">		
		<IconTabBar
		id="idIconTabBarNoIcons"
		expanded="{device>/isNoPhone}"
		class="sapUiResponsiveContentPadding">
		<items>
			<IconTabFilter
				text="Hitzeanzeige">
				<acc:LineChartHitze width="400" height="200" responsive="true" chartType="Line" data="{/lineData}"/>
			</IconTabFilter>
			<IconTabFilter
				text="Geschwindigkeitsanzeige">
				<l:VerticalLayout width="100%" >
					<acc:LineChartSpeed width="400" height="200" responsive="true" chartType="Line" data="{/lineData}"/>
					<l:FixFlex class="fixFlexHorizontal" vertical="true" >
						<l:fixContent width="50%">
							<l:HorizontalLayout>
								<l:content>
									<VBox>
										<Select
											forceSelection="false"
											selectedKey="{/filter/0/Key}"
											items="{
											path: '/filter',
											sorter: { path: 'Name' }
											}">
											<core:Item key="{Key}" text="{Name}" />
										</Select>
									</VBox>
 								</l:content>
 							</l:HorizontalLayout>	
 						</l:fixContent>
						<l:fixContent width="50%">
							<acc:GaugeChartSpeed width="400" height="200" responsive="true" chartType="Line" data="{/gaugeData}"/>
						</l:fixContent>
					</l:FixFlex>
				</l:VerticalLayout>	
			</IconTabFilter>
		</items>
	</IconTabBar>	
	</Page>
</core:View>
